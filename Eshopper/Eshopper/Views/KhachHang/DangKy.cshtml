@model Eshopper.ViewModels.DangKyVM
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="container-fluid py-5" style="max-width:700px">
    <div class="container py-5">
        <h1 class="mb-4">Đăng ký tài khoản</h1>
        <form asp-controller="KhachHang" asp-action="DangKy" method="post" enctype="multipart/form-data">
            <div class="row g-5">
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="@Model.MaKh" class="form-label my-3"></label><sup class="text-danger" style="margin-left:4px">*</sup>
                        <input asp-for="@Model.MaKh" class="form-control">
                        <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup class="text-danger" style="margin-left:4px">*</sup>
                        <input asp-for="@Model.MatKhau" class="form-control">
                        <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-item">
                    <label asp-for="@Model.HoTen" class="form-label my-3"></label><sup class="text-danger" style="margin-left:4px">*</sup>
                    <input asp-for="@Model.HoTen" class="form-control">
                    <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <input asp-for="@Model.GioiTinh" class="form-check-input">
                    <label class="form-check-label" for="GioiTinh">Nam</label>
                </div>
                <div class="col-md-12 col-lg-6">
                    <label asp-for="@Model.NgaySinh" class="form-label my-3"></label>
                    <input asp-for="@Model.NgaySinh" class="form-control">
                    <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                </div>
                <div class="col-md-12 col-lg-6">
                    <label asp-for="@Model.DienThoai" class="form-label my-3"></label><sup class="text-danger" style="margin-left:4px">*</sup>
                    <input asp-for="@Model.DienThoai" class="form-control">
                    <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <label asp-for="@Model.DiaChi" class="form-label my-3"></label><sup class="text-danger" style="margin-left:4px">*</sup>
                    <input asp-for="@Model.DiaChi" class="form-control">
                    <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                </div>
                
                <div class="form-item">
                    <label asp-for="@Model.Email" class="form-label my-3"></label><sup class="text-danger" style="margin-left:4px">*</sup>
                    <input asp-for="@Model.Email" class="form-control">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <label for="Hinh" class="form-label my-3">Ảnh đại diện</label>
                    <input type="file" name="Hinh" class="form-control">
                    @* <span asp-validation-for="@Model.AnhDaiDien" class="text-danger"></span> *@
                </div>
                <div class="form-item">
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng ký</button>
                </div>
                <div class="col-md-12 col-lg-6">
                    <a asp-action="DangNhap" asp-controller="KhachHang">Đã có tài khoản? Đăng nhập ngay</a>
                </div>
            </div>
        </form>
    </div>
</div>