@* Sử dụng models gọi đến class Menu loại hàng trong ViewModels *@
@model IEnumerable<EShopper.ViewModels.MenuLoaiHangVM> 

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh mục sản phẩm</h4>
        <ul class="list-unstyled fruite-categorie">
            @* Sử dụng vòng lặp để lấy ra dữ liệu từ cơ sở dữ liệu *@
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="HangHoa" asp-action="Index" asp-route-loaihang="@item.MaLoai">
                            <i class="fas fa-tag me-2"></i>@item.TenLoai
                        </a>
                        <span>(@item.SoLuong)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>